{
  "name": "we-got-jobz",
  "version": "1.0.0",
  "description": "Enterprise-scale freelance marketplace with Next.js, NestJS",
  "private": true,
  "type": "module",
  "author": "mukesudo",
  "license": "MIT",
  "homepage": "https://github.com/mukesudo/we-got-jobz",
  "repository": {
    "type": "git",
    "url": "https://github.com/mukesudo/we-got-jobz"
  },
  "bugs": {
    "url": "https://github.com/mukesudo/we-got-jobz/issues"
  },
  "keywords": [
    "freelance",
    "marketplace",
    "nextjs",
    "nestjs",
    "turbo",
    "monorepo",
    "kubernetes",
    "enterprise"
  ],
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:push": "turbo run db:push --filter=@we-got-jobz/db",
    "db:generate": "turbo run db:generate --filter=@we-got-jobz/db",
    "db:migrate": "turbo run db:migrate --filter=@we-got-jobz/db",
    "db:seed": "turbo run db:seed --filter=@we-got-jobz/db",
    "db:studio": "turbo run db:studio --filter=@we-got-jobz/db"
  },
  "dependencies": {
    "@we-got-jobz/db": "workspace:*",
    "@we-got-jobz/ui": "workspace:*",
    "@we-got-jobz/eslint-config": "workspace:*",
    "@we-got-jobz/typescript-config": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "eslint": "^9.39.1",
    "typescript": "5.9.2",
    "@prisma/client": "^7.0.1",
    "prettier": "^3.6.2",
    "prisma": "^7.0.1",
    "turbo": "^2.6.2"
  }
}
