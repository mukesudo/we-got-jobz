
{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env",
    "**/.env.local",
    "**/tsconfig.json"
  ],
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "interactive": true,
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build", "lint"],
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**"
      ],
      "cache": true,
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.json",
        "package.json"
      ]
    },
    "lint": {
      "outputs": [],
      "cache": true,
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx"
      ]
    },
    "test": {
      "outputs": [
        "coverage/**"
      ],
      "cache": true,
      "inputs": [
        "src/**",
        "test/**"
      ]
    },
    "type-check": {
      "cache": true,
      "outputs": []
    },
    "db:push": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "prisma/schema.prisma", 
        "prisma/migrations/**"
      ]
    },
    "db:migrate": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "prisma/schema.prisma",
        "prisma/migrations/**"
      ]
    },
    "db:generate": {
      "cache": true,
      "outputs": [
        "prisma/generated/**"
      ],
      "inputs": [
        "prisma/schema.prisma"
      ]
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "REDIS_URL",
    "JWT_SECRET",
    "NEXT_PUBLIC_API_URL",
    "NEXT_PUBLIC_APP_URL"
  ]
}
