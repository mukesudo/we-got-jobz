# Environment Configuration Template
# Location: .env.example

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
APP_NAME=Freelance Marketplace
APP_VERSION=1.0.0

# ============================================
# FRONTEND
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Freelance Marketplace
NEXT_PUBLIC_SITE_DESCRIPTION=Connect with top-rated freelancers for your projects

# ============================================
# BACKEND
# ============================================
BACKEND_PORT=3000
BACKEND_HOST=0.0.0.0
LOG_LEVEL=debug
CORS_ORIGIN=http://localhost:3001

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/freelance_marketplace
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=freelance_marketplace
DATABASE_HOST=localhost
DATABASE_PORT=5432

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://:redis123@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-2024
JWT_EXPIRY=7d
SESSION_SECRET=your-session-secret-key-change-in-production-2024
SESSION_EXPIRY=604800000

# Better Auth - OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================
# PAYMENT PROCESSING (STRIPE)
# ============================================
STRIPE_SECRET_KEY=sk_test_your_test_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_test_your_webhook_secret_here

# Stripe Configuration
STRIPE_PLATFORM_FEE_PERCENTAGE=10
STRIPE_CURRENCY=usd

# ============================================
# EMAIL & NOTIFICATIONS
# ============================================
# Resend (Free tier email service)
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@freelance-marketplace.com
RESEND_FROM_NAME=Freelance Marketplace

# ============================================
# OBSERVABILITY & MONITORING
# ============================================
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ENABLED=true
GRAFANA_PORT=3002
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# OpenTelemetry
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_TIMEOUT=10000
OTEL_SERVICE_NAME=freelance-marketplace
OTEL_LOG_LEVEL=info

# Loki
LOKI_ENDPOINT=http://localhost:3100

# ============================================
# DEPLOYMENT & CLOUD
# ============================================
# Railway/Fly.io/Render Configuration
RAILWAY_ENVIRONMENT=development
RAILWAY_STATIC_URL=

# Kubernetes Configuration
KUBERNETES_NAMESPACE=production
KUBERNETES_ENVIRONMENT=staging

# ============================================
# FEATURES
# ============================================
# Enable/Disable Features
FEATURE_REAL_TIME_CHAT=true
FEATURE_VIDEO_INTERVIEWS=false
FEATURE_ESCROW_PAYMENTS=true
FEATURE_DISPUTES=true
FEATURE_PREMIUM_SUBSCRIPTIONS=true

# ============================================
# RATE LIMITING & SECURITY
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=10

# ============================================
# FILE UPLOADS
# ============================================
# Max file size in MB
MAX_UPLOAD_SIZE_MB=5
# Allowed MIME types (comma-separated)
ALLOWED_UPLOAD_TYPES=image/jpeg,image/png,application/pdf

# ============================================
# CACHE
# ============================================
CACHE_TTL_SHORT=300          # 5 minutes
CACHE_TTL_MEDIUM=3600        # 1 hour
CACHE_TTL_LONG=86400         # 24 hours

# ============================================
# SEO & ANALYTICS
# ============================================
NEXT_PUBLIC_GA_ID=G_XXXXXXXXXX
NEXT_PUBLIC_SITEMAP_URL=/sitemap.xml

# ============================================
# DEVELOPMENT ONLY
# ============================================
SKIP_ENV_VALIDATION=false
DEBUG=freelance-marketplace:*
SEED_DATABASE=false